{{#if user}}
<form action="/profil?_method=PUT" method="post">
    <input type="text" placeholder="{{user.name}}" name="name">
    <input type="email" placeholder="{{user.email}}" name="email">
    <input type="password" placeholder="Nouveau mot de passe" name="password">
    <button type="submit">EDIT INFO</button>
</form>
{{/if}}

{{#if user.isVerified}}
<button> Mail vérifié </button>
{{else }}
<form action="/verifmail" method="post">
    <button type="submit"> Verifié mon e-mail </button>
</form>
{{/if }}
